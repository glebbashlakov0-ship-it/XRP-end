generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TransactionStatus {
  PROCESSING
  PAID
  ERROR
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  firstName     String?
  lastName      String?
  phone         String?
  referralLinkId String?
  referralLink  ReferralLink? @relation(fields: [referralLinkId], references: [id], onDelete: SetNull)
  referrerUserId String?
  referrer       User? @relation("UserReferrals", fields: [referrerUserId], references: [id], onDelete: SetNull)
  referrals      User[] @relation("UserReferrals")
  userReferralLink UserReferralLink?
  passwordHash  String
  plainPassword String?
  role          String    @default("USER")
  status        String    @default("ACTIVE")
  emailVerifiedAt DateTime?
  lastVerificationEmailSentAt DateTime?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  wallets                  Wallet[]
  auditLogs                AuditLog[]
  sessions                 Session[]
  emailVerificationTokens  EmailVerificationToken[]
  passwordResetTokens      PasswordResetToken[]
  balance                  UserBalance?
  portfolioSnapshots       PortfolioSnapshot[]
  supportMessages          SupportMessage[]
  devVerificationLinks     DevVerificationLink[]
  deposits                 Deposit[]
  withdrawals              Withdrawal[]

  @@index([email])
  @@index([role])
  @@index([status])
  @@index([referralLinkId])
  @@index([referrerUserId])
}

model UserBalance {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  totalXrp        Float    @default(0)
  totalUsd        Float    @default(0)
  activeStakesXrp Float    @default(0)
  rewardsXrp      Float    @default(0)
  lastYieldAt     DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PortfolioSnapshot {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  totalXrp  Float
  totalUsd  Float
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model Wallet {
  id        String   @id @default(cuid())
  address   String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([address])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  event     String
  ip        String?
  userAgent String?
  metadata  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([event])
  @@index([createdAt])
}

model Session {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionTokenHash String   @unique
  expiresAt        DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([sessionTokenHash])
  @@index([expiresAt])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([tokenHash])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([tokenHash])
  @@index([expiresAt])
}

model SupportMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  repliedAt DateTime?

  @@index([userId])
  @@index([createdAt])
}

model DevVerificationLink {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String
  token     String
  purpose   String   @default("VERIFY_EMAIL")
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model SiteContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model InfoRequest {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String
  phone      String
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

model Deposit {
  id         String             @id @default(cuid())
  userId     String
  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount     Float
  amountXrp  Float
  currency   String
  address    String
  txId       String?
  status     TransactionStatus  @default(PROCESSING)
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Withdrawal {
  id            String            @id @default(cuid())
  userId        String
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount        Float
  amountXrp     Float
  currency      String
  walletAddress String
  status        TransactionStatus @default(PROCESSING)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model WalletConfig {
  id        String   @id @default(cuid())
  currency  String   @unique
  address   String
  qrImage   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReferralLink {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]

  @@index([createdAt])
  @@index([name])
}

model UserReferralLink {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model Domain {
  id        String   @id @default(cuid())
  host      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}
